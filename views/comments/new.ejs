<% include ../partials/header%>
    <div class="container">
        <div class="row">

            <h1 style="text-align:center;padding-top: 20px;" class="col-md-12" >Create a new comment for the template</h1>
            <br><br><br>
                <h1 style="text-align:center;margin-top: 20px;" class="col-md-12"> <%=template.name%> </h1>
            <div style="width:30%;margin:25px auto;">
                <form action="/templates/<%=template._id%>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Enter text">
                    </div>
                    
                    
                    <div class="form-group">
                        <input class="btn btn-default btn-block btn-primary" type="submit" value="Submit">
                    </div>
                </form>
                <a href="/templates">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer%>