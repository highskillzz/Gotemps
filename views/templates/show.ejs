<%include ../partials/header%>


<div class="container" style="padding-top:50px;">
    <div class="row">
        <div class="col-md-3 col-sm-12">
            <p class="lead">Gotemps</p>
            <div class="list-group">
                <li class="list-group-item active btn">Form</li>
                <!-- <li class="list-group-item btn" id="data">Data</li> -->
            </div>

        </div>
        <div class="col-md-9 col-sm-12">
            <div class="thumbnail">
                <!-- <iframe src="<%=template.preview%>" width="800" height="500" frameborder="0" marginheight="0"
                    marginwidth="0"></iframe> -->
                <div id="Container" style="padding-bottom:56.25%; position:relative; display:block; width: 100%">
                    <iframe id="ViostreamIframe" width="100%" height="100%" src="<%=template.preview%>"
                        frameborder="0" allowfullscreen="" style="position:absolute; top:0; left: 0"></iframe>
                </div>
                <div class="caption-full" style="margin-top:20px;">
                    <h4>
                        <a>
                            <%=template.name%>
                        </a>
                    </h4>
                    <h6>Copy link:
                        <%=template.copy%>
                        </h4>

                        <p>Submitted By
                            <em>
                                <%=template.author.username%>
                            </em>
                        </p>
                        <%   if(currentUser && template.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/templates/<%=template._id%>/edit">Edit</a>
                        <form id="delete-form" action="/templates/<%=template._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                        <%}%>
                </div>
            </div>
            <div class="card card-block bg-faded">
                <div class="text-right">
                    <a href="/templates/<%=template._id%>/comments/new" class="btn btn-success">Add a new comment</a>
                </div>
                <hr>
                <%template.comments.forEach(function(comment){%>
                <div class="row">
                    <div class="col-md-12">
                        <strong>
                            <%=comment.author.username%>
                        </strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%=comment.text%>
                        </p>
                        <%  if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <a href="/templates/<%=template._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning ">Edit</a>

                        <form id="delete-form" action="/templates/<%=template._id%>/comments/<%=comment._id%>?_method=DELETE"
                            method="POST">
                            <button type="submit" class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <%}%>

                    </div>
                </div>
                <br>

                <%})%>
            </div>
        </div>

    </div>





</div>
<script>
    $("#data").on("click", function () {
        $.ajax();
    });

</script>
<%include ../partials/footer%>